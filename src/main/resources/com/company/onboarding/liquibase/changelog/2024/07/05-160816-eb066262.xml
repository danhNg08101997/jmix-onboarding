<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="onboarding">
        <dropForeignKeyConstraint baseTableName="STUDENTS" constraintName="FK_STUDENTS_ON_CLASSES"/>
    </changeSet>
    <changeSet id="2" author="onboarding">
        <createTable tableName="CLASS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLASS"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="onboarding">
        <createTable tableName="SCHOOL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SCHOOL"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="onboarding">
        <createTable tableName="STUDENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_STUDENT"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DATE_OF_BIRTH" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ID_NUM" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CLASS_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="onboarding">
        <createTable tableName="TEACHER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TEACHER"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="onboarding">
        <addForeignKeyConstraint baseColumnNames="CLASS_ID" baseTableName="STUDENT" constraintName="FK_STUDENT_ON_CLASS"
                                 referencedColumnNames="ID" referencedTableName="CLASS"/>
    </changeSet>
    <changeSet id="7" author="onboarding">
        <dropTable cascadeConstraints="true" tableName="CLASSES"/>
    </changeSet>
    <changeSet id="8" author="onboarding">
        <dropTable cascadeConstraints="true" tableName="SHOOL"/>
    </changeSet>
    <changeSet id="9" author="onboarding">
        <dropTable cascadeConstraints="true" tableName="STUDENTS"/>
    </changeSet>
    <changeSet id="10" author="onboarding">
        <dropTable cascadeConstraints="true" tableName="TEACHERS"/>
    </changeSet>
</databaseChangeLog>